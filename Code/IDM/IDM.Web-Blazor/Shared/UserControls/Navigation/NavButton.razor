<div class="nav-item px-3">
    <NavLink class="nav-link" href="@Page" Match="NavLinkMatch.All">
        <i class="@Icon"></i> @Text
    </NavLink>
</div>

@code {
    [Parameter]
    public string Page { get; set; }

    [Parameter]
    public string Icon { get; set; }

    [Parameter]
    public string Text { get; set; }
}
