@model SecurityGroupViewModel
@{
    ViewData["Title"] = "Security Group List";
}
<!-- Button trigger modal -->
<button type="button" class="btn btn-light btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel" viewBox="0 0 16 16">
        <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5v-2zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2h-11z"/>
    </svg>
    Filter
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div id="data">
    <table class="cstm-table">
        <thead>
            <tr>
                <th>Action</th>
                <th>AliasName</th>
                <th>DisplayName</th>
                <th>Owner</th>
                <th>Admin 1</th>
                <th>Admin 2</th>
                <th>Admin 3</th>
                <th>Mail Address</th>
                <th>Status</th>
                <th>Created Date</th>
                <th>Modified Date</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.sgList == null || Model.sgList.Count == 0)
            {
                <tr>
                    <td class="cstm-text-center" colspan="11">
                        No records found in the system.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var sg in Model.sgList)
                {
                    <tr>
                        <td>@sg.AliasName</td>
                        <td>@sg.DisplayName</td>
                        <td>@sg.OwnerName</td>
                        <td>@sg.Admin1Name</td>
                        <td>@sg.Admin2Name</td>
                        <td>@sg.Admin3Name</td>
                        <td>@sg.PrimaryEmailAddress</td>
                        <td>@sg.TypeDescription</td>
                        <td>@sg.StatusDescription</td>
                        <td>@sg.CreatedDate.ToShortDateString()</td>
                        <td>@sg.ModifiedDate?.ToShortDateString()</td>
                        <td>@Html.ActionLink("Edit", "EditSG", "SecurityGroup", new { internalID = sg.InternalID })</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script type="text/javascript" src="~/js/Group/Index.js"></script>
